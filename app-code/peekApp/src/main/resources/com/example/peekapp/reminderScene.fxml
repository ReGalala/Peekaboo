<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.peekapp.Controller">
   <children>
      <ImageView fitHeight="501.0" fitWidth="900.0">
         <image>
            <Image url="@../../../image/pexels-damir-mijailovic-1921088-3695238.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="addReminderTextfield" layoutX="158.0" layoutY="198.0" prefHeight="200.0" prefWidth="302.0" promptText="Enter your reminder">
         <font>
            <Font size="20.0" />
         </font></TextField>
      <ListView fx:id="remindersListView" editable="true" layoutX="460.0" layoutY="198.0" prefHeight="200.0" prefWidth="302.0" />
      <Button fx:id="addReminderBtn" layoutX="158.0" layoutY="398.0" mnemonicParsing="false" onAction="#getUserInput" prefHeight="26.0" prefWidth="301.0" style="-fx-background-color: #0808fc;" text="Add" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="removeReminderBtn" layoutX="460.0" layoutY="398.0" mnemonicParsing="false" onAction="#removeReminder" prefHeight="26.0" prefWidth="301.0" style="-fx-background-color: #0808fc;" text="Remove" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Label layoutX="158.0" layoutY="167.0" prefHeight="31.0" prefWidth="302.0" style="-fx-background-color: white;" text="Enter your reminder:" textFill="#0d0d0d">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="backBtn" alignment="CENTER" layoutX="34.0" layoutY="34.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: #0808fc;" text="Back" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="89.0" fitWidth="257.0" layoutX="332.0" layoutY="50.0">
         <image>
            <Image url="@../../../image/logo2.png" />
         </image>
      </ImageView>
      <Label layoutX="460.0" layoutY="167.0" prefHeight="31.0" prefWidth="302.0" style="-fx-background-color: white;" text="Enter your reminder:" textFill="#0d0d0d">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="remindersWarningLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="161.0" layoutY="460.0" prefHeight="27.0" prefWidth="600.0" textAlignment="CENTER" textFill="RED" wrapText="true">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
